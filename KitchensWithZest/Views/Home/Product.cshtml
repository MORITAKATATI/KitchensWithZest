@model IEnumerable<KitchensWithZest.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainPhotoPath)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ImagesPath)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@Url.Content(item.MainPhotoPath)" width="50" />
            </td>
            @*<td>
                    <img src="@Url.Content(item.ImagesPath)" width="50"/>
                </td>*@
            <td>
                @Html.ActionLink("Details", "ProductDetails", new { id = item.ProductId }) 
            </td>
        </tr>
    }

</table>
